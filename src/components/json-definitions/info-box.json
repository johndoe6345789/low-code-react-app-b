{
  "id": "info-box",
  "type": "div",
  "bindings": {
    "className": {
      "source": ["type", "className"],
      "transform": "const variantClasses = { info: 'bg-blue-500/10 border-blue-500/20 text-blue-700 dark:text-blue-300', warning: 'bg-yellow-500/10 border-yellow-500/20 text-yellow-700 dark:text-yellow-300', success: 'bg-green-500/10 border-green-500/20 text-green-700 dark:text-green-300', error: 'bg-destructive/10 border-destructive/20 text-destructive' }; return ['flex gap-3 p-4 rounded-lg border', variantClasses[data[0] ?? 'info'], data[1]].filter(Boolean).join(' ')"
    }
  },
  "children": [
    {
      "id": "info-box-icon",
      "type": "component",
      "bindings": {
        "component": {
          "source": "type",
          "transform": "const iconMap = { info: 'Info', warning: 'Warning', success: 'CheckCircle', error: 'XCircle' }; return iconMap[data ?? 'info']"
        },
        "size": {
          "source": null,
          "transform": "20"
        },
        "weight": {
          "source": null,
          "transform": "'fill'"
        },
        "className": {
          "source": null,
          "transform": "'flex-shrink-0 mt-0.5'"
        }
      }
    },
    {
      "id": "info-box-content-wrapper",
      "type": "div",
      "bindings": {
        "className": {
          "source": null,
          "transform": "'flex-1 min-w-0'"
        }
      },
      "children": [
        {
          "id": "info-box-title",
          "type": "div",
          "bindings": {
            "_if": {
              "source": "title",
              "transform": "!!data"
            },
            "className": {
              "source": null,
              "transform": "'font-semibold mb-1'"
            }
          },
          "children": [
            {
              "id": "info-box-title-text",
              "type": "text",
              "bindings": {
                "children": {
                  "source": "title",
                  "transform": "data"
                }
              }
            }
          ]
        },
        {
          "id": "info-box-body",
          "type": "div",
          "bindings": {
            "className": {
              "source": null,
              "transform": "'text-sm opacity-90'"
            }
          },
          "children": [
            {
              "id": "info-box-children",
              "type": "text",
              "bindings": {
                "children": {
                  "source": "children",
                  "transform": "data"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
